#! /usr/bin/env node
const program = require('commander')
const path = require('path')

program
  .version('0.1.0')
  .option('-c, --config', 'Upload config')

program
  .command('buckets')
  .description('Get all buckets of the account')
  .action(function () {
    require('../src/buckets')
  })

program
  .command('upload <LocalUploadConfig>')
  .description('Batch upload files to the qiniu bucket')
  .action(function (configPath) {
    configPath = path.resolve(process.env.PWD, configPath)
    require('../main/index')(configPath)
  })


program.parse(process.argv)

